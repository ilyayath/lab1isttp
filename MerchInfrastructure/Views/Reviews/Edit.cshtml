@model MerchDomain.Model.Review

@{
    ViewData["Title"] = "Редагувати відгук";
}

<h1>Редагувати відгук</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="BuyerId" class="control-label">Покупець</label>
        <select asp-for="BuyerId" class="form-control" asp-items="ViewBag.Buyers">
            <option value="">Оберіть покупця</option>
        </select>
        <span asp-validation-for="BuyerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MerchandiseId" class="control-label">Товар</label>
        <select asp-for="MerchandiseId" class="form-control" asp-items="ViewBag.Merchandises">
            <option value="">Оберіть товар</option>
        </select>
        <span asp-validation-for="MerchandiseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Рейтинг</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Коментар</label>
        <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-warning">Зберегти зміни</button>
    </div>
</form>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>