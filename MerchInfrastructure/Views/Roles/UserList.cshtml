@model IEnumerable<MerchDomain.Model.User>

<h2>Список користувачів</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-userId="@user.Id">Редагувати ролі</a>
                </td>
            </tr>
        }
    </tbody>
</table>