@model MerchDomain.Model.Merchandise

@{
    ViewData["Title"] = "Додати товар";
}

<h1 class="text-center my-4">Додати товар</h1>
<div class="container">
    <form asp-action="CreateMerchandise" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name">Назва</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Price">Ціна</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CategoryId">Категорія</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "CategoryName"))" required></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="BrandId">Бренд</label>
            <select asp-for="BrandId" class="form-control" asp-items="@(new SelectList(ViewBag.Brands, "Id", "BrandName"))" required></select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="TeamId">Команда</label>
            <select asp-for="TeamId" class="form-control" asp-items="@(new SelectList(ViewBag.Teams, "Id", "TeamName"))" required></select>
            <span asp-validation-for="TeamId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="SizeId">Розмір</label>
            <select asp-for="SizeId" class="form-control" asp-items="@(new SelectList(ViewBag.Sizes, "Id", "SizeName"))" required></select>
            <span asp-validation-for="SizeId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="imageUrl">URL зображення</label>
            <input type="text" name="imageUrl" class="form-control" />
            <span class="text-danger">@Html.ValidationMessage("imageUrl")</span>
        </div>
        <button type="submit" class="btn btn-success">Додати</button>
        <a asp-action="Merchandises" class="btn btn-secondary">Назад</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}